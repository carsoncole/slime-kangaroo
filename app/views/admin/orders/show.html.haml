#order
  .row
    .col-md-8
      %h1 Order
      %table.table#order
        %tr
          %th Status
          %td= @order.status
        %tr
          %th ID
          %td= @order.id
        %tr
          %th Amount
          %td= number_to_currency @order.amount
        %tr
          %th Charged at
          %td= @order.charged_at
        %tr
          %th Email
          %td= @order.user.email
        %tr
          %th Street address 1
          %td= @order.street_address_1
        %tr
          %th Street address 2
          %td= @order.street_address_2
        %tr
          %th City
          %td= @order.city
        %tr
          %th State
          %td= @order.state
        %tr
          %th Zip code
          %td= @order.zip_code

  .row
    .col-md-8
      %h2 Items
      %table.table#order-items
        %thead
          %th Item
          %th
          %th.quantity Quantity
          %th.amount Unit price
          %th.amount Total
        - @order.order_items.each do |item|
          %tr
            %td= item.product.name
            %td
              - if item.product.size_oz
                = item.product.size_oz
                oz.
            %td= item.quantity
            %td= number_to_currency(item.unit_price)
            %td= number_to_currency(item.amount)
