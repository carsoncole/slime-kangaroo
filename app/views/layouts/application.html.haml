!!!
%html
  %head
  %title Slime Kangaroo
  %meta(name="viewport" content="width=device-width,initial-scale=1")
  = csrf_meta_tags
  = csp_meta_tag

  = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
  = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'

  %body
    %nav.navbar.navbar-expand-lg.navbar-light.bg-light#main-nav
      = link_to root_path, class: 'navbar-brand', id: 'brand-logo' do
        = image_tag "slime-kangaroo-logo.png", alt: 'Slime Kangaroo Logo', width: 60, class: 'img-fluid'
      %button.navbar-toggler(type='button' data-toggle="collapse" data-target="#navbarSupportedContent")
        %span.navbar-toggler-icon


      %div.collapse.navbar-collapse#navbarSupportedContent
        %ul.navbar-nav.mr-auto
          - if signed_in?
            %li= link_to "Products", products_path
        - if signed_in?
          = link_to 'Sign out', sign_out_path, method: :delete
        - else
          = link_to 'Sign in', sign_in_path, class: 'nav-link'

    .container
      = yield

  %footer
    Copyright 2021 Slime Kangaroo
