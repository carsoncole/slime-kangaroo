= form_for @user do |form|
  .form-group
    = form.label :email
    = form.text_field :email, type: 'email', class: 'form-control', id: 'register-email'

  .form-group
    = form.label :password
    = form.password_field :password, class: 'form-control', id: 'register-password'

  - if @user.persisted?
    = form.submit "Update", class: 'btn btn-primary'
  - else
    = form.submit "Register", class: 'btn btn-primary'
