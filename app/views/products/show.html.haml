.row
  .col-md-8

    %p#notice= notice

    %h1
      = @product.name
    %p
      = @product.description
    %p
      %b Price:
      = number_to_currency(@product.price) if @product.price.present?

    %p
      - if @product.images.attached? && @product.images.first.representable?
        = image_tag @product.images.first.representation(resize_to_limit: [600, 600])

    = button_to "Buy", "#", class: 'btn btn-primary btn-lg', disabled: true
    %br
    - if signed_in?
      = link_to 'Edit', edit_product_path(@product)
    \|
    = link_to 'Back', products_path
