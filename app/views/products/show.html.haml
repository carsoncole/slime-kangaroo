.row
  .col-md-8

    %p#notice= notice

    %h1
      = @product.name
    %p
      = @product.description

    %p
      = "#{@product.size_oz} oz" if @product.size_oz.present?

.row
  .col-md-2
    %p
      %b Price:
      = number_to_currency(@product.price) if @product.price.present?
    = button_to  add_to_cart_path(product_id: @product.id), class: 'btn btn-primary btn-lg' do
      = "Add to Cart"

.row
  .col-md-8
    %br
    %p
      - if @related_products&.count > 1
        Sizes:
        - @related_products.each do |p|
          - if @product == p
            = p.size_oz
          - else
            = link_to p.size_oz, product_path(p)
          - unless p == @related_products.last
            \|

  .col-md-10
    - if @product.images.attached? && @product.images.first.representable?
      = image_tag @product.images.first.representation(resize_to_limit: [800, 800]), class: 'img-fluid rounded float-right'




.row
  .col-md-8
    %br
    - if signed_in?
      = link_to 'Edit', edit_admin_product_path(@product)
      \|
      = link_to 'Back', admin_products_path
