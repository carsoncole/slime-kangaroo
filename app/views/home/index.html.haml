#home
  #logo
    = image_tag 'slime-kangaroo-logo.png', alt: 'Slime Kangaroo Logo', width: '250px', class: 'img-fluid'

  - if @products.any?
    .row.product
      - @products.each do |product|
        - if product.images.attached?
          - if product.images.first.representable?
            .col-md-4.text-center
              = link_to product_path(product) do
                / # = image_tag product.images.first.representation(resize_to_limit: [400, 400]), class: 'img-fluid rounded'
                = image_tag product.images.first.variant(:gravity=>"Center", resize: "400x400^", crop: '400x400+0+0'), class: 'img-fluid rounded'
                .product-name= product.name
  %h1 Coming Soon

  .row
    .col-md-2
    .col-md-8
      = @home_page_introduction
