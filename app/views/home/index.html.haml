#home
  #logo
    = image_tag 'slime-kangaroo-logo.png', alt: 'Slime Kangaroo Logo', width: '300px', class: 'img-fluid'

  - if @products.any?
    .row.product
      - @products.each do |product|
        - if product.images.attached?
          - if product.images.first.representable?
            .col-md-3.text-center
              = link_to product_path(product) do
                = image_tag product.images.first.representation(resize_to_limit: [400, 400]), class: 'img-fluid rounded'
                .product-name= product.name
  %h1 Coming Soon

  .row
    .col-md-2
    .col-md-8
      = @home_page_introduction
